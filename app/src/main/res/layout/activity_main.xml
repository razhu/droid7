<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="agetic.gob.bo.test2.MainActivity">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/et_1"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="215dp"
        app:layout_constraintRight_toLeftOf="@+id/b_1" />

    <Button
        android:text="Button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/b_1"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_1"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_1"
        app:layout_constraintLeft_toLeftOf="@+id/et_1" />

</android.support.constraint.ConstraintLayout>
